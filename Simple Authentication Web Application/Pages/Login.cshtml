@page
@model Simple_Authentication_Web_Application.Pages.LoginModel
@{
    
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Login Page</title>
        <link rel="stylesheet" type="text/css" href="~/css/login.css">
    </head>
    <body>
        <div id="form-container-login">
        <h4 id="login-title">LOG IN</h4>
            <form method="post">
                <input class="form-control" type="text" asp-for="Model.Username" id="username" name="username" placeholder="Username" required>
                <span asp-validation-for="Model.Username" class="text-danger"></span>

                <input class="form-control" type="password" asp-for="Model.Password" id="password" name="password" placeholder="Password" required>
                <span asp-validation-for="Model.Password" class="text-danger"></span>


                <button type="submit">Login</button>
            </form>
        </div>
    </body>

}
